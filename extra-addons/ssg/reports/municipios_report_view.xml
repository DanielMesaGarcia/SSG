<odoo>
    <data>
        <template id="municipios_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <style>
                            .table1 {
                                border-bottom: 1px solid #000000;
                                border-top: 1px solid #000000;
                                border-spacing: 0px;
                                margin-left: auto;
                                margin-right: auto;
                                text-align: center;
                            }
                            .table1 tbody tr:nth-of-type(odd) {
                                background-color: #d6dbdf;
                            }
                            .table2 {
                                width: 100%;
                                border-bottom: 1px solid #000000;
                                text-align: center;
                            }
                            .tr2 {
                                border-bottom: 1px solid #000000;
                            }
                        </style>
                        <br/>
                        <t t-if="o.imagen">
                            <img t-att-src="'data:image/*;base64,' + o.imagen" style="height:80px;"/>
                        </t>
                        <br/>
                        <br/>
                        <table class="table1">
                            <thead>
                                <tr class="tr2">
                                    <td width="300" style="text-align: center;">
                                        <font size="5"><b>Cliente</b></font>
                                    </td>
                                    <td width="300" style="text-align: center;">
                                        <font size="5"><b>Fecha</b></font>
                                    </td>
                                    <td width="300" style="text-align: center;">
                                        <font size="5"><b>Usuario</b></font>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.incidencias" t-as="line">
                                    <td width="300" style="text-align: center;">
                                        <span t-field="line.cliente.name"/>
                                    </td>
                                    <td width="300" style="text-align: center;">
                                        <span t-field="line.fecha"/>
                                    </td>
                                    <td width="300" style="text-align: center;">
                                        <span t-field="line.description"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
